package com.midproject.tripin.util;

import java.util.ArrayList;
import java.util.List;

public class PlaceThemeSort {
	public static List<String> mapTheme(String cat1, String cat2, String cat3) {
		List<String> themes = new ArrayList<>();
		
		if("A01".equals(cat1)) themes.add("자연");
		if ("A02".equals(cat1) && "A0201".equals(cat2)) themes.add("문화");
        if ("A02".equals(cat1) && "A0202".equals(cat2)) themes.add("레저");
        if ("A05".equals(cat1)) return "맛집"; //맛집
        if ("B02".equals(cat1)) return "숙소"; //숙소
        if ("A04".equals(cat1)) return "쇼핑"; //쇼핑
        if ("A02".equals(cat1) && "A0207".equals(cat2)) return "축제"; //축제
		
		return themes; //기타
	}
}
