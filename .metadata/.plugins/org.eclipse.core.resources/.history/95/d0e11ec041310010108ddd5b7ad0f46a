<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 여행지 목록, 검색 sql -->
<mapper namespace="com.midproject.tripin.repository.PlaceRepo">

<select id="selectPlaceById" parameterType="String" resultType="PlaceVO">
	SELECT
		dest_id
		, dest_name
		, dest_type
		, repr_img,url
		, full_address
		, contact_num
		, oper_hours
		, fee_info
		, rel_keywords
		, orig_json_data
	FROM dests
	WHERE dest_id = #{dest_id}
</select>

</mapper>